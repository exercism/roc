{%- import "generator_macros.j2" as macros with context -%}
{{ macros.canonical_ref() }}
{{ macros.header() }}

import {{ exercise | to_pascal }} exposing [{{ cases[0]["property"] | to_snake }}]

{% for case in cases -%}
# {{ case["description"] }}
expect
    input = {{ case["input"]["lines"] | to_roc_multiline_string | replace(" ", "□") | indent(8) }} |> Str.replaceEach "□" " "
    result = {{ case["property"] | to_snake }} input |> Str.replaceEach " " "□"
    expected = {{ case["expected"] | to_roc_multiline_string | replace(" ", "□") | indent(8) }}
    result == expected

{% endfor %}
